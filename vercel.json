{
  "version": 2,
  "builds": [
    {
      "src": "server/server.cjs",
      "use": "@vercel/node",
      "build": {
        "env": {
          "DATABASE_URL": "postgresql://neondb_owner:npg_9aQFnjC0eiyY@ep-misty-silence-ad9ei7kc-pooler.c-2.us-east-1.aws.neon.tech/neondb?sslmode=require&channel_binding=require&connection_limit=1"
        }
      }
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "client/build" }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/server/server.cjs" },
    { "source": "/static/(.*)", "destination": "/client/build/static/$1" },
    { "source": "/favicon.ico", "destination": "/client/build/favicon.ico" },
    { "source": "/logo192.png", "destination": "/client/build/logo192.png" },
    { "source": "/logo512.png", "destination": "/client/build/logo512.png" },
    { "source": "/manifest.json", "destination": "/client/build/manifest.json" },
    { "source": "/robots.txt", "destination": "/client/build/robots.txt" },
    { "source": "/(.*)", "destination": "/client/build/index.html" }
  ]
}
